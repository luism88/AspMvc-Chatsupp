@model AspMvcChatsupp.MVC.Areas.Chatsupp.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/areas/chatsupp/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
</head>
<body>

    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please sign in</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" action="/Chatsupp/Login/LoginResult" method="post">
                            @Html.HiddenFor(model => model.ConnectionId)
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Psw, new { @class = "form-control", placeholder = "Password", type = "password" })
                                </div>
                                @if (Model.MsgError != null)
                                {

                                    <div class="alert alert-danger">
                                        <strong>@Model.MsgError</strong>
                                    </div>
                                }
                                <input id="formButton" class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        //$(function () {
        //    $.connection.hub.start().done(function () {
        //        $("#ConnectionId").val($.connection.hub.id);
        //    });
        //});

    </script>
</body>
</html>
